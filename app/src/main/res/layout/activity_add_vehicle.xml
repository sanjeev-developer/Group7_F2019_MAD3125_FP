<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/btn_grey"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_back_addveh"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginEnd="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/dock"
                android:text="Add Vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:textColor="@color/black"
                        android:fontFamily="@font/novabold"/>



                    <LinearLayout
                        android:id="@+id/ll_company"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edt_bc"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/txt_company"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="13dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/novaregular"
                            android:text="Select Company"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_company"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:layout_height="0dp">

                    </androidx.appcompat.widget.AppCompatSpinner>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_Company"
                    android:layout_width="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="80dp"/>


            </LinearLayout>




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/black"
                    android:fontFamily="@font/novabold"/>



                <LinearLayout
                    android:id="@+id/ll_model"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/txt_model"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/novaregular"
                        android:text="Select Model"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_down"/>

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_model"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="0dp">

                </androidx.appcompat.widget.AppCompatSpinner>

            </LinearLayout>



            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plate no"
                android:textColor="@color/black"
                android:fontFamily="@font/novabold"/>

            <EditText
                android:id="@+id/edt_plateno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:fontFamily="@font/novaregular"
                android:hint="enter plate no"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="13dp"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:fontFamily="@font/novabold"/>

                <LinearLayout
                    android:id="@+id/ll_year"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/novaregular"
                        android:text="Select year"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_down"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_year"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="0dp">

                </androidx.appcompat.widget.AppCompatSpinner>



            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_add"
                    android:background="@drawable/curve_blue"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:fontFamily="@font/novabold"
                    android:textColor="@color/white"
                    android:layout_height="45dp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>