<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/btn_grey"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_signup_back"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/dock"
                android:text="Add Employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_signup"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/demouser" />

            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_ae_fullname"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:padding="12dp"
                android:textSize="13dp"
                android:fontFamily="@font/novaregular"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"
                android:hint="enter fullname" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone no"
                android:textColor="@color/black"
                android:fontFamily="@font/novabold"/>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:background="@drawable/edt_bc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">


                <EditText
                    android:background="@null"
                    android:id="@+id/countrycodeEt"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/novaregular"
                    android:text="+1" />



                <EditText
                    android:background="@null"
                    android:id="@+id/et_ae_phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="1234567890"
                    android:fontFamily="@font/novaregular"
                    android:hint="enter phone no"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="10" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textColor="@color/black"
                android:fontFamily="@font/novabold"/>

            <TextView
                android:id="@+id/edt_ae_dob"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:padding="13dp"
                android:textSize="12dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/novaregular"
                android:maxLines="1"
                android:maxLength="50"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select D.O.B" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:fontFamily="@font/novabold"/>

            <EditText
                android:id="@+id/edt_ae_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:fontFamily="@font/novaregular"
                android:hint="enter email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="13dp"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_title_spec"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="@color/black"
                    android:fontFamily="@font/novabold"/>



                <LinearLayout
                    android:id="@+id/ll_ae_type"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/txt_ae_type"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/novaregular"
                        android:text="Select type"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_down"/>

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_ae"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="0dp">

                </androidx.appcompat.widget.AppCompatSpinner>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_Intern"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_intern_salary"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter salary" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_intern_schoolname"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter school name" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_Pfa"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_rate_pfa"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter rate" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hour worked"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_hourworked_pfa"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter hour worked" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fixed amount"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_fixedamount_pfa"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter fixed amount" />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_Ptc"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_rate_ptc"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter rate" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hour worked"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_hourworked_ptc"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter hour worked" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commission(%)"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_cp_ptc"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter commission percent" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_fulltime"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_salary_ft"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter salary" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bonus"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_hourworked_ft"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bc"
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/novaregular"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:hint="enter bonus" />


            </LinearLayout>



<LinearLayout
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/but_addemp"
        android:background="@drawable/curve_blue"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:text="Add Employee"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/novabold"
        android:textColor="@color/white"
        android:layout_height="45dp" />


</LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>